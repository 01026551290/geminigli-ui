{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "shell",
  "description": "Shell execution capability",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "/bin/sh",
          "args": true
        },
        {
          "name": "bash",
          "cmd": "/bin/bash",
          "args": true
        },
        {
          "name": "gemini",
          "cmd": "/opt/homebrew/bin/gemini",
          "args": true
        }
      ]
    }
  ]
}
