{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-set-title",
    "core:webview:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "core:path:default",
    "os:default",
    "shell:default",
    "shell:allow-execute",
    "store:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "/bin/sh",
          "args": true
        },
        {
          "name": "bash",
          "cmd": "/bin/bash",
          "args": true
        },
        {
          "name": "gemini",
          "cmd": "/opt/homebrew/bin/gemini",
          "args": true
        }
      ]
    }
  ]
}
