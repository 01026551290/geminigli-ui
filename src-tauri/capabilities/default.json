{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-set-title",
    "core:webview:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "core:path:default",
    "os:default",
    "shell:default",
    "shell:allow-execute",
    "store:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "/bin/sh",
          "args": true
        },
        {
          "name": "bash",
          "cmd": "/bin/bash",
          "args": true
        },
        {
          "name": "zsh",
          "cmd": "/bin/zsh",
          "args": true
        },
        {
          "name": "gemini",
          "cmd": "gemini",
          "args": true
        },
        {
          "name": "npm",
          "cmd": "npm",
          "args": true
        },
        {
          "name": "npx",
          "cmd": "npx",
          "args": true
        },
        {
          "name": "which",
          "cmd": "/usr/bin/which",
          "args": true
        },
        {
          "name": "find",
          "cmd": "/usr/bin/find",
          "args": true
        },
        {
          "name": "ls",
          "cmd": "/bin/ls",
          "args": true
        },
        {
          "name": "test",
          "cmd": "/usr/bin/test",
          "args": true
        },
        {
          "name": "homebrew-gemini",
          "cmd": "/opt/homebrew/bin/gemini",
          "args": true
        },
        {
          "name": "local-gemini", 
          "cmd": "/usr/local/bin/gemini",
          "args": true
        },
        {
          "name": "where",
          "cmd": "where",
          "args": true
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "pwsh",
          "cmd": "pwsh",
          "args": true
        },
        {
          "name": "node",
          "cmd": "node",
          "args": true
        }
      ]
    }
  ]
}
